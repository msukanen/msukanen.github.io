{
    "scripts": {
        "bootstrap": "npm install --silent -g typescript shx",
        
        "prebuild": "shx cp ./gfx/*.woff ./.dist/gfx/ && shx cp ./gfx/*.woff2 ./.dist/gfx/",
        "build": "npm run build-all",
        "postbuild": "",
        
        "build-all": "npm run build-all-js && npm run build-all-css && npm run build-all-html",
        "build-all-js": "npm run build-matrix-rain-js",
        "build-all-css": "npm run build-matrix-rain-css",
        "build-all-html": "npm run build-matrix-rain-html",

        "build-matrix-rain": "npm run build-matrix-rain-js && npm run build-matrix-rain-css && npm run build-matrix-rain-html",
        "build-matrix-rain-js": "npx tsc ./src/matrix-rain.ts --outFile ./js/matrix-rain.js --target es2016 --module amd",
        "build-matrix-rain-css": "dart compile-sass.dart ./src/matrix-rain.sass ./css/matrix-rain.css",
        "build-matrix-rain-html": "",

        "local-publish": "npm run local-css && npm run local-js && npm run local-html",
        "local-js": "npm run build-all-js && shx cp ./js/*.js ./.dist/js/",
        "local-css": "npm run build-all-css && shx cp ./css/*.css ./.dist/css/",
        "local-html": "shx cp ./matrix-rain.html ./.dist/",
        
        "prepublish": "",
        "publish": ""
    }
}
