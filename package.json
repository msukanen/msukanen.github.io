{
    "scripts": {
        "bootstrap": "npm install --silent -g typescript shx",
        
        "prebuild": "shx cp ./gfx/*.woff ./dist/gfx/ && shx cp ./gfx/*.woff2 ./dist/gfx/",
        "build": "npm run build-js && npm run build-css && npm run build-html",
        
        "build-js": "npx tsc",
        "build-css": "dart compile-sass.dart ./src/matrix-rain.sass ./css/matrix-rain.css",
        "build-html": "",

        "local-js": "npm run build-js && shx cp ./js/matrix-rain.js ./dist/js/",
        "local-css": "npm run build-css && shx cp ./css/matrix-rain.css ./dist/css/",
        "local-html": "shx cp ./matrix-rain.html ./dist/",
        
        "prepublish": "npm run build",
        "publish": "npm run local-css && npm run local-js && npm run local-html"
    }
}
